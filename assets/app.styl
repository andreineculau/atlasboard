@import 'nib'

gutter = 15px
textColor = #ffffff
linkColor = #ffffff
errorColor = #ff0000
backgroundColor = #333333
offlineColor = #ff0000
outOfSyncColor = #da532c

body
  background backgroundColor
  color textColor
  font-family 'Courier New', Courier, 'Lucida Sans Typewriter', 'Lucida Typewriter', monospace;
  // font-family Consolas, Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace, serif;
  font-weight bold
  font-size .75em
  // text-shadow 1px 1px 1px rgba(0, 0, 0, 1)
  // overflow hidden
  cursor default

a
  color linkColor
  cursor pointer

::-webkit-scrollbar
  display none

#main
  width 100vw
  height 100vh
  padding 1px
  margin 0 auto

  &.offline
    background offlineColor

  &.outOfSync
    background outOfSyncColor

#dashboards
  ul
    li{}

#widgets.gridster
  width 100%

  ul
    margin 0
    padding 0

.widget
  background lighten(backgroundColor, 1)
  border 1px solid lighten(backgroundColor, 5)
  white-space nowrap
  overflow auto

  &.error
    border-color errorColor

  .loading-wrapper{}

  .error-wrapper
    padding (gutter / 2)

  .success-wrapper
    float left
    padding (gutter / 2)



