$fontFamily = 'Roboto Condensed'
$backgroundColor = #181818
$gutterSize = 20px

$bodyPadding = 0

$widgetBackgroundColor = #0f0f0f
$widgetPadding = $gutterSize * 0.7
$widgetContainerPadding = 0px
$widgetContentPadding = 0px
$widgetBorder = solid 2px #1f1f1f

$widgetTitleColor = #454545
$widgetTitleBackgroundColor = transparent
$widgetTitleFontSize = 30px
$widgetTitlePadding = 0px

$errorColor = #d04437
$successColor = #1C842F

$gray-base = #000;
$gray-darker = lighten($gray-base, 13.5%);
$gray-dark = lighten($gray-base, 20%);
$gray = lighten($gray-base, 33.5%);
$gray-light = lighten($gray-base, 46.7%);
$gray-lighter = lighten($gray-base, 93.5%);